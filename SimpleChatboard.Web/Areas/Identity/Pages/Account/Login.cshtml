@page
@model SimpleChatboard.Web.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Sign In";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Sign In</h2>
                <a asp-page="/Index" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-house-door"></i> Home
                </a>
            </div>

            <form id="account" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                               placeholder="name@example.com" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-key"></i></span>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true"
                               placeholder="Password" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <div class="mb-3 form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
                </div>
                
                <div class="d-grid gap-2">
                    <button id="login-submit" type="submit" class="btn btn-primary">Sign In</button>
                    <a class="btn btn-outline-secondary" asp-page="./Register">
                        Don't have an account? Register
                    </a>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-center">Forgot your password?</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
}
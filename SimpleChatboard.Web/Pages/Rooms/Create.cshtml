@page
@model SimpleChatboard.Web.Pages.Rooms.CreateModel
@{
    ViewData["Title"] = "Create Room";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="mb-0">Create Room</h4>
                <a asp-page="/Index" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-house-door"></i> Home
                </a>
            </div>

            <form method="post">
                <div class="mb-4">
                    <label asp-for="Name" class="form-label">Room Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter room name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Create Room</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model SimpleChatboard.Web.Pages.Rooms.MembersModel
@{
    ViewData["Title"] = "Room Members";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="mb-0">Room Members</h4>
                <div class="btn-group">
                    <a asp-page="Chat" asp-route-id="@Model.RoomId" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-chat"></i> Back to Chat
                    </a>
                    <a asp-page="Index" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-house-door"></i> Home
                    </a>
                </div>
            </div>

            <div class="list-group">
                @foreach (var member in Model.DisplayMembers)
                {
                    <div class="list-group-item d-flex align-items-center">
                        <i class="bi bi-person-circle me-2"></i>
                        <div>
                            <div>@member.DisplayName</div>
                            <small class="text-muted">@member.UserId</small>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
}

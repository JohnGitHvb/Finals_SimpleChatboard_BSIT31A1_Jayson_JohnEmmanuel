@page
@model SimpleChatboard.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Welcome";
}

@if (!User.Identity?.IsAuthenticated ?? true)
{
    <div class="container-fluid py-5">
        <div class="row justify-content-center text-center">
            <div class="col-md-8">
                <h1 class="display-4 mb-4">Welcome to SimpleChatboard</h1>
                <p class="lead mb-4">Join conversations, create chat rooms, and connect with others.</p>
                <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg">
                        <i class="bi bi-person-plus"></i> Get Started
                    </a>
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-box-arrow-in-right"></i> Sign In
                    </a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row g-0">
        <div class="col-3 border-end vh-100 overflow-auto py-3 px-2">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="mb-0">Rooms</h5>
                <div class="btn-group">
                    <a class="btn btn-sm btn-primary" asp-page="/Rooms/Create">
                        <i class="bi bi-plus-lg"></i> New
                    </a>
                    <a class="btn btn-sm btn-outline-secondary" asp-page="/Rooms/Join">
                        <i class="bi bi-box-arrow-in-right"></i> Join
                    </a>
                </div>
            </div>
            <partial name="_RoomListPartial" model="@Model.Rooms" />
        </div>
        <div class="col-9 vh-100 d-flex align-items-center justify-content-center">
            <div class="text-center text-muted">
                <h5>Select a room to start chatting</h5>
                <p>Or create a new room to begin the conversation</p>
            </div>
        </div>
    </div>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
}
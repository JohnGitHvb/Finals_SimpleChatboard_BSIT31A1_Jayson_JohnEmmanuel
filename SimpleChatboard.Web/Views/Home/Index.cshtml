@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authorization
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Home Page";
}
@if (!SignInManager.IsSignedIn(User))
{
    <div class="text-center mt-5">
        <h1 class="display-4">Welcome to SimpleChatboard</h1>
        <p class="lead">Please <a asp-area="Identity" asp-page="/Account/Login">Login</a> or <a asp-area="Identity" asp-page="/Account/Register">Register</a> to continue.</p>
    </div>
}
else
{
    <partial name="/Pages/Rooms/Index.cshtml" />
}
